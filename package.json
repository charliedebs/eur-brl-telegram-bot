{
    "name": "eur-brl-telegram-bot",
    "version": "1.0.0",
    "description": "EUR/BRL comparison and guide bot for Telegram",
    "type": "module",
    "main": "src/server.js",
    "scripts": {
        "start": "node src/server.js",
        "dev": "node src/server.js",
        "test": "NODE_OPTIONS=--experimental-vm-modules jest",
        "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
        "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
        "test:nlu": "node test-nlu.js",
        "test:nlu:fast": "node test-nlu.js 2",
        "test:nlu:custom": "node test-nlu.js 3"
    },
    "jest": {
        "testEnvironment": "node",
        "transform": {},
        "testMatch": [
            "**/__tests__/**/*.test.js",
            "**/?(*.)+(spec|test).js"
        ],
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/server.js",
            "!src/**/__tests__/**"
        ]
    },
    "dependencies": {
        "@paypal/checkout-server-sdk": "^1.0.3",
        "@supabase/supabase-js": "^2.38.0",
        "dotenv": "^17.2.2",
        "express": "^4.18.2",
        "mercadopago": "^2.10.0",
        "node-cron": "^4.2.1",
        "openai": "^6.0.1",
        "qrcode": "^1.5.4",
        "qrcode-pix": "^5.0.0",
        "qrcode-terminal": "^0.12.0",
        "telegraf": "^4.15.0",
        "telegraf-ratelimit": "^2.0.0",
        "whatsapp": "^0.0.5-Alpha",
        "whatsapp-web.js": "^1.34.2",
        "winston": "^3.18.3"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "jest": "^30.2.0"
    }
}
